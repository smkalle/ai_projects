# MCP AI Agent Configuration

# API Keys (required)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000
UI_PORT=8501
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:8501
# Comma-separated CORS allowlist (optional)
ALLOWED_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# Default Agent Settings
DEFAULT_MODEL=gpt-4o
DEFAULT_PROVIDER=openai
TEMPERATURE=0.7
MAX_TOKENS=2000

# MCP Settings
MCP_SERVERS=web-browser,file-manager
MCP_TIMEOUT=30
MCP_CONFIG_PATH=
SEARCH_SERVER_URL=http://localhost:8765
SEARCH_PROVIDER=tavily
SEARCH_PORT=8765
START_SEARCH_SERVER=false
FILESERVER_ROOT=.
FILESERVER_ALLOW=read

# Database (if using)
DATABASE_URL=sqlite:///./agents.db

# Redis (if using)
REDIS_URL=redis://localhost:6379

# Optional: LangChain/LangSmith
LANGCHAIN_API_KEY=your_langchain_key_here
LANGSMITH_API_KEY=your_langsmith_key_here
