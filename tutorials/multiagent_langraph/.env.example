# GreenGuard Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Required API Keys
OPENAI_API_KEY=your_openai_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# Optional: Anthropic API Key (if using Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false
ENVIRONMENT=development

# Server Configuration
HOST=127.0.0.1
PORT=8006

# Database Configuration (optional)
REDIS_URL=redis://localhost:6379
DATABASE_URL=sqlite:///./greenguard.db

# Performance Configuration
MAX_CONCURRENT_WORKFLOWS=10
REQUEST_TIMEOUT=60
AGENT_TIMEOUT=30

# Security Configuration
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:8006"]

# Feature Flags
ENABLE_DEMO_MODE=true
ENABLE_WEBSOCKETS=true
ENABLE_ANALYTICS=false

# Alert Configuration
DEFAULT_ALERT_CHANNELS=["sms", "email", "mobile_push"]
MAX_ALERT_RECIPIENTS=100000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600